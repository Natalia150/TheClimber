            android:layout_width="100dp"
            android:layout_height="50dp"
            android:layout_marginTop="15dp"
            android:text="Grade 7a"
            android:id="@+id/l7a"
            android:textColor="#fff"
            android:textSize="18sp"
            android:background="@drawable/btn_lev"/>
        <Button
            android:layout_width="100dp"
            android:layout_height="50dp"
            android:layout_marginTop="15dp"
            android:text="Grade 7a+"
            android:id="@+id/l7ap"
            android:textColor="#fff"
            android:textSize="18sp"
            android:background="@drawable/btn_lev"/>
        <Button
            android:layout_width="100dp"
            android:layout_height="50dp"
            android:layout_marginTop="15dp"
            android:text="Grade 7b"
            android:id="@+id/l7b"
            android:textColor="#fff"
            android:textSize="18sp"
            android:background="@drawable/btn_lev"/>

