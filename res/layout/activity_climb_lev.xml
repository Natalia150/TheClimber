            android:layout_width="100dp"
            android:layout_height="50dp"
            android:layout_marginTop="15dp"
            android:text="Grade 7b+"
            android:id="@+id/l7bp"
            android:textColor="#fff"
            android:textSize="18sp"
            android:background="@drawable/btn_lev"/>

