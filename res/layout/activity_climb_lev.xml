            android:layout_width="100dp"
            android:layout_height="50dp"
            android:layout_marginTop="15dp"
            android:text="Grade 7c"
            android:id="@+id/l7c"
            android:textColor="#fff"
            android:textSize="18sp"
            android:background="@drawable/btn_lev"/>

        <Button
            android:layout_width="100dp"
            android:layout_height="50dp"
            android:layout_marginTop="15dp"
            android:text="Grade 7c+"
            android:id="@+id/l7cp"
            android:textColor="#fff"
            android:textSize="18sp"
            android:background="@drawable/btn_lev"/>

        <Button
            android:layout_width="100dp"
            android:layout_height="50dp"
            android:layout_marginTop="15dp"
            android:text="Grade 8a"
            android:id="@+id/l8a"
            android:layout_marginBottom="120dp"
            android:textColor="#fff"
            android:textSize="18sp"
            android:background="@drawable/btn_lev"/>




    </LinearLayout>

    </ScrollView>


</RelativeLayout>